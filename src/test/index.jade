var angularApp = 'baseApp'

extends ../jade/layouts/_default

block vars
    - var angularApp = 'baseApp';
    - var appTitle = "effort.less test page";
    - var bodyAttributes = {'ng-controller' : 'MainCtrl as main'};

block styles
    link(href="/css/test-site-test.css", rel="stylesheet")

block append scripts
    script(type="text/javascript", src="../application.js")

block content
    if angularApp
        include angularContent
    else
        include htmlContent